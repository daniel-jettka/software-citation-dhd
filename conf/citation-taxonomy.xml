<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="http://www.tei-c.org/release/xml/tei/custom/schema/relaxng/tei_all.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<?xml-model href="http://www.tei-c.org/release/xml/tei/custom/schema/relaxng/tei_all.rng" type="application/xml"
	schematypens="http://purl.oclc.org/dsdl/schematron"?>
<TEI xmlns="http://www.tei-c.org/ns/1.0">
   <teiHeader>
      <fileDesc>
         <titleStmt>
            <title>Title</title>
         </titleStmt>
         <publicationStmt>
            <p>Publication Information</p>
         </publicationStmt>
         <sourceDesc>
            <p>Information about the source</p>
         </sourceDesc>
      </fileDesc>
      <encodingDesc>
         <classDecl>
            <taxonomy>
               <category xml:id="Name">
                  <catDesc>Die Software ist namentlich genannt.</catDesc>
                  <catDesc>
                     <num type="boolean"/>
                  </catDesc>
               </category>
               <category xml:id="Bib.Ref">
                  <catDesc>Es gibt einen bibliographischer Eintrag für eine Referenzpublikation über
                     die Software.</catDesc>
                  <catDesc>
                     <num type="boolean"/>
                  </catDesc>
               </category>
               <category xml:id="Bib.Soft">
                  <catDesc>Es gibt einen bibliographischen Eintrag für die Software
                     selbst.</catDesc>
                  <catDesc>
                     <num type="boolean"/>
                  </catDesc>
               </category>
               <category xml:id="Agent">
                  <catDesc>Personell oder institutionell Verantwortliche sind namentlich
                     genannt.</catDesc>
                  <catDesc>
                     <num type="boolean"/>
                  </catDesc>
               </category>
               <category xml:id="URL">
                  <catDesc>Die Zitation enthält eine URL (z.B. zu einer Webseite über die Software,
                     einem Code-Repositorium, einer Referenzpublikation, etc.)</catDesc>
                  <catDesc>
                     <num type="boolean"/>
                  </catDesc>
               </category>
               <category xml:id="PID">
                  <catDesc>Die Zitation enthält einen persistenten Identifikator (PID), z.B. eine
                     DOI, entweder für die Software selbst oder für eine
                     Referenzpublikation.</catDesc>
                  <catDesc>
                     <num type="boolean"/>
                  </catDesc>
               </category>
               <category xml:id="Ver">
                  <catDesc>Version: Die Zitation enthält die Angabe einer bestimmten
                     Softwareversion, -revision oder anderweitig notwendigen Spezifikation (z.B.
                     eine Version, die spezifisch für ein Betriebssystem ist, ein bestimmtes
                     Softwarepaket oder ein Datum).</catDesc>
                  <catDesc>
                     <num type="boolean"/>
                  </catDesc>
               </category>
            </taxonomy>
         </classDecl>
      </encodingDesc>
   </teiHeader>
   <text>
      <body>
         <p>Some text here.</p>
      </body>
   </text>
</TEI>
